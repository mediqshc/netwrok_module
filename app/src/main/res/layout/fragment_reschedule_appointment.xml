<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="lang"
            type="com.homemedics.app.firebase.RemoteConfigLanguage" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="locale"
        android:textDirection="locale">

        <com.homemedics.app.ui.custom.CustomActionbar
            android:id="@+id/actionbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:action2Res="@drawable/ic_cross_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvHeading"
            style="@style/heading_m"
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp16"
            android:text="@{lang.globalString.whenConsultation}"
            app:layout_constraintTop_toBottomOf="@+id/actionbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDateSlots"
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp18"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/tvHeading"
            app:layout_constraintStart_toStartOf="@+id/tvHeading"
            app:layout_constraintEnd_toEndOf="@+id/tvHeading"
            tools:itemCount="7"
            tools:listitem="@layout/item_date_checkable" />

        <TextView
            android:id="@+id/tvTime"
            style="@style/heading_m"
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp18"
            android:text="@{lang.globalString.timing}"
            app:layout_constraintTop_toBottomOf="@+id/rvDateSlots"
            app:layout_constraintStart_toStartOf="@+id/tvHeading"
            app:layout_constraintEnd_toEndOf="@+id/tvHeading"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSlots"
            android:layout_width="@dimen/dp0"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp18"
            android:layout_marginBottom="@dimen/dp16"
            android:nestedScrollingEnabled="false"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintBottom_toTopOf="@+id/bReschedule"
            app:layout_constraintEnd_toEndOf="@+id/tvHeading"
            app:layout_constraintStart_toStartOf="@+id/tvHeading"
            app:layout_constraintTop_toBottomOf="@+id/tvTime"
            app:spanCount="4"
            tools:itemCount="8"
            tools:listitem="@layout/item_bordered_textview" />

        <TextView
            android:id="@+id/tvNoData"
            style="@style/heading_m"
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp18"
            android:text="@{lang.globalString.noSlotsAvailable}"
            android:textSize="14sp"
            android:textColor="@color/grey"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/tvTime"
            app:layout_constraintStart_toStartOf="@+id/tvHeading"
            app:layout_constraintEnd_toEndOf="@+id/tvHeading"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bReschedule"
            style="@style/button_long"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{lang.globalString.reshedule}"
            android:enabled="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clContainer"
        android:layout_width="match_parent"
        android:textDirection="locale"
        android:layoutDirection="locale"
        android:layout_height="@dimen/dp64"
        android:background="@color/primary">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp4"
            android:paddingEnd="@dimen/dp20"
            android:layout_marginStart="@dimen/dp16"
            android:layout_marginVertical="@dimen/dp20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_back_white" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivDrImage"
            android:layout_width="@dimen/dp48"
            android:layout_height="@dimen/dp48"
            android:src="@drawable/ic_male"
            app:civ_border_color="@color/primary50"
            app:civ_border_width="@dimen/dp2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivBack"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvName"
            style="@style/label_m"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp16"
            android:maxLines="1"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/tvBookedBy"
            app:layout_constraintEnd_toStartOf="@+id/brDelete"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/ivDrImage"
            app:layout_constraintTop_toTopOf="@+id/ivDrImage"
            tools:text="Jahanzeb Qureshi" />

        <TextView
            android:id="@+id/tvBookedBy"
            style="@style/label"
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp16"
            android:layout_marginTop="@dimen/dp4"
            android:ellipsize="end"
            android:maxLines="1"
            android:includeFontPadding="false"
            android:lineSpacingExtra="@dimen/dp2"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/ivDrImage"
            app:layout_constraintEnd_toEndOf="@+id/tvName"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/ivDrImage"
            app:layout_constraintTop_toBottomOf="@+id/tvName"
            tools:text="Booked by Kamran" />

        <TextView
            android:id="@+id/tvStatus"
            style="@style/label_sm"
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp16"
            android:textAlignment="textEnd"
            android:visibility="gone"
            android:textColor="@color/white"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvName"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="3 hrs Left"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="@dimen/dp8"
            android:padding="@dimen/dp16"
            android:src="@drawable/ic_delete"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/ivDrImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivDrImage"
            app:tint="@color/white"
            tools:visibility="visible" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/brDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="left"
            app:constraint_referenced_ids="ivDelete,tvStatus"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="dataManager"
            type="com.fatron.network_module.models.response.appointments.AppointmentResponse" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/tabLayout"
            style="@style/tabs_primary"
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"
            android:background="@color/primary90"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingVertical="@dimen/dp12"
            android:paddingStart="@dimen/dp12"
            android:paddingEnd="@dimen/dp12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvService"
                style="@style/label_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp6"
                android:text="@{dataManager.serviceType}"
                tools:text="Video call"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvDetail"
                style="@style/label_m"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                tools:text="06 May 2022 | 09:10 - 09:30 | Rs. 1,000"/>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_eclipse_h"
            android:scaleType="fitXY"
            android:src="@drawable/bottom_oval_primary"
            app:layout_constraintEnd_toEndOf="@+id/tabLayout"
            app:layout_constraintStart_toStartOf="@+id/tabLayout"
            app:layout_constraintTop_toBottomOf="@+id/tabLayout" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivThumbnail"
            android:layout_width="@dimen/profile_img"
            android:layout_height="@dimen/profile_img"
            android:src="@drawable/ic_female_icon"
            app:civ_border_color="@color/primary"
            app:civ_border_width="3dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <TextView
            android:id="@+id/tvName"
            style="@style/heading_m"
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            android:text="@{dataManager.patientDetails.fullName}"
            tools:text="Muhammad Akram "
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivThumbnail" />

        <TextView
            android:id="@+id/tvDescription"
            style="@style/label_m"
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp4"
            android:textAlignment="center"
            android:textColor="@color/grey"
            tools:text="Male | 25 year, 3 months"
            app:layout_constraintEnd_toEndOf="@+id/tvName"
            app:layout_constraintStart_toStartOf="@+id/tvName"
            app:layout_constraintTop_toBottomOf="@+id/tvName" />

        <View
            android:id="@+id/vShadow"
            android:layout_width="@dimen/dp0"
            android:layout_height="@dimen/dp10"
            android:layout_marginTop="@dimen/dp16"
            android:background="@color/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <import type="com.homemedics.app.R" />

        <import type="android.view.View" />

        <variable
            name="dataManager"
            type="com.fatron.network_module.models.generic.MultipleViewItem" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layoutDirection="locale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitle"
            style="@style/label_m"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/dp24"
            android:ellipsize="end"
            android:textAlignment="viewStart"
            android:maxLines="1"
            android:text="@{dataManager.title}"
            app:layout_constraintBottom_toTopOf="@+id/tvDesc"
            app:layout_constraintEnd_toStartOf="@+id/ivDelete"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Title" />

        <TextView
            android:id="@+id/tvDesc"
            style="@style/label"
            android:layout_width="0dp"
            android:textAlignment="viewStart"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:visibility="@{dataManager.desc.length()>0?View.VISIBLE:View.GONE }"
            android:text="@{dataManager.desc}"
            android:textColor="@color/grey"
            app:layout_constraintEnd_toEndOf="@+id/tvTitle"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/tvTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            tools:text="Description" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrierStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="start"
            app:constraint_referenced_ids="ivDelete, ivEdit" />

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="@dimen/dp16"
            android:layout_height="@dimen/dp20"
            app:layout_constraintBottom_toBottomOf="@+id/tvDesc"
            app:layout_constraintEnd_toStartOf="@+id/ivEdit"
            app:layout_constraintStart_toEndOf="@+id/barrierStart"
            app:layout_constraintTop_toTopOf="@+id/tvTitle"
            android:imageRes="@{dataManager.itemEndIcon == null ? R.drawable.ic_delete : dataManager.itemEndIcon}"
            tools:src="@drawable/ic_delete"/>

        <ImageView
            android:id="@+id/ivEdit"
            android:layout_width="@dimen/dp16"
            android:layout_height="@dimen/dp20"
            android:layout_marginStart="@dimen/dp20"
            app:layout_constraintStart_toEndOf="@+id/ivDelete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvTitle"
            app:layout_constraintBottom_toBottomOf="@+id/tvDesc"
            android:visibility="gone"
            tools:visibility="visible"
            android:src="@drawable/ic_edit" />


        <View
            android:id="@+id/vDivider"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/dp16"
            android:background="@drawable/separator_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvDesc" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
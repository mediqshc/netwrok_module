<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black90">

        <include
            android:id="@+id/iActionbar"
            layout="@layout/layout_call_actionbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp16"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <include
            android:id="@+id/iUserLarge"
            layout="@layout/layout_call_user_lg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_marginHorizontal="@dimen/dp16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.16000003" />

        <include
            android:id="@+id/iCallMulti"
            layout="@layout/layout_call_accepted"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/dp16"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/iCallActionButtons"
            app:layout_constraintEnd_toEndOf="@+id/iActionbar"
            app:layout_constraintStart_toStartOf="@+id/iActionbar"
            app:layout_constraintTop_toBottomOf="@+id/iActionbar"
            tools:visibility="visible" />

        <include
            android:id="@+id/iCallActionButtons"
            layout="@layout/layout_call_action_buttons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_marginBottom="@dimen/dp20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/iCallMulti"
            app:layout_constraintStart_toStartOf="@+id/iCallMulti" />

        <include
            android:id="@+id/iIncomingCallActionButtons"
            layout="@layout/layout_call_incoming_action_buttons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_marginBottom="@dimen/dp56"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/iCallMulti"
            app:layout_constraintStart_toStartOf="@+id/iCallMulti" />

        <include
            android:id="@+id/iSelfView"
            layout="@layout/layout_call_user_self_view"
            android:layout_width="@dimen/dp100"
            android:layout_height="@dimen/call_self_view_h"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_marginEnd="@dimen/dp16"
            android:layout_marginTop="@dimen/dp16"
            app:layout_constraintEnd_toEndOf="@+id/iActionbar"
            app:layout_constraintTop_toBottomOf="@+id/iActionbar" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/gOutgoingCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="iUserLarge, iCallActionButtons" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/gIncomingCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="iUserLarge, iIncomingCallActionButtons" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/gCallAccepted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="iUserLarge, iCallActionButtons" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/gCallMulti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="iCallMulti, iCallActionButtons" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
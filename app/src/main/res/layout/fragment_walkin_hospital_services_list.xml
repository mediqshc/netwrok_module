<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="lang"
            type="com.homemedics.app.firebase.RemoteConfigLanguage" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="locale"
        android:textDirection="locale">

        <com.homemedics.app.ui.custom.CustomActionbar
            android:id="@+id/actionbar"
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"
            app:action1Res="@drawable/ic_back_white"
            app:action2Res="@drawable/ic_shopping_cart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.nex3z.flowlayout.FlowLayout
            android:id="@+id/flTags"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:flChildSpacing="@dimen/dp8"
            app:flRowSpacing="@dimen/dp8"
            android:layout_margin="@dimen/dp16"
            app:layout_constraintEnd_toStartOf="@+id/ivSort"
            app:layout_constraintStart_toStartOf="@+id/actionbar"
            app:layout_constraintTop_toBottomOf="@+id/actionbar">

        </com.nex3z.flowlayout.FlowLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivSort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp16"
            app:srcCompat="@drawable/ic_sort"
            app:layout_constraintTop_toTopOf="@+id/flTags"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvFilterBadge"
            android:layout_width="@dimen/dp16"
            android:layout_height="@dimen/dp16"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="11sp"
            tools:text="00"
            android:background="@drawable/circle_pink"
            app:layout_constraintBottom_toTopOf="@+id/ivSort"
            app:layout_constraintEnd_toEndOf="@+id/ivSort"
            app:layout_constraintStart_toEndOf="@+id/ivSort"
            app:layout_constraintTop_toTopOf="@+id/ivSort" />

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp1"
            android:layout_marginTop="@dimen/dp12"
            android:background="@color/divider"
            app:layout_constraintTop_toBottomOf="@id/barrier"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.constraintlayout.widget.Barrier
            android:id="@id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="ivSort, flTags"/>

        <EditText
            android:id="@+id/etSearch"
            style="@style/edittext_search"
            android:layout_width="@dimen/dp0"
            android:layout_marginVertical="@dimen/dp16"
            android:background="@drawable/search_bg"
            android:drawableEnd="@drawable/ic_search"
            app:layout_constraintEnd_toEndOf="@+id/ivSort"
            app:layout_constraintStart_toStartOf="@+id/flTags"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvLabTests"
            android:layout_width="@dimen/dp0"
            android:layout_height="@dimen/dp0"
            android:layout_marginTop="@dimen/dp16"
            android:paddingBottom="@dimen/dp16"
            android:background="@color/white"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_doctor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etSearch"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tvNoData"
            style="@style/label_m"
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp12"
            android:paddingVertical="@dimen/dp18"
            android:background="@color/white"
            android:text="@{lang.globalString.noResultFound}"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etSearch"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <import type="com.homemedics.app.R" />

        <import type="android.view.View" />

        <variable
            name="dataManager"
            type="com.fatron.network_module.models.generic.MultipleViewItem" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layoutDirection="locale"
        android:textDirection="locale"
        android:paddingBottom="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="@dimen/dp16"
            android:layout_height="@dimen/dp20"
            defaultImage="@{dataManager.drawable}"
            setImage="@{dataManager.imageUrl}"
            app:layout_constraintBottom_toBottomOf="@+id/tvDesc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvTitle"
            android:visibility="@{dataManager.hasRoundLargeIcon? View.GONE:View.VISIBLE}" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivIconLargeRound"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            defaultImage="@{dataManager.drawable}"
            setImage="@{dataManager.imageUrl}"
            android:visibility="@{dataManager.hasRoundLargeIcon? View.VISIBLE: View.GONE}"
            app:layout_constraintBottom_toBottomOf="@+id/tvDesc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvTitle"
            app:srcCompat="@drawable/ic_call" />

        <ImageView
            android:id="@+id/ivIconLarge"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            defaultImage="@{dataManager.drawable}"
            setImage="@{dataManager.imageUrl}"
            android:visibility="@{dataManager.hasLargeIcon? View.VISIBLE: View.GONE}"
            app:layout_constraintBottom_toBottomOf="@+id/vDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvTitle"
            app:srcCompat="@drawable/ic_call" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="end"
            app:constraint_referenced_ids="ivIcon, ivIconLargeRound, ivIconLarge" />

        <TextView
            android:id="@+id/tvTitle"
            style="@style/label_m"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp24"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/dp24"
            android:textAlignment="viewStart"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@{dataManager.title}"
            app:layout_constraintBottom_toTopOf="@+id/tvDesc"
            app:layout_constraintEnd_toStartOf="@+id/ivDelete"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/barrier"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Title" />

        <TextView
            android:id="@+id/tvDesc"
            style="@style/label"
            android:layout_width="0dp"
            android:textAlignment="viewStart"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/dp2"
            android:maxLines="@{dataManager.descMaxLines}"
            android:visibility="@{dataManager.desc.length()>0?View.VISIBLE:View.GONE }"

            android:textColor="@color/grey"
            app:layout_constraintBottom_toBottomOf="@+id/ivIconLargeRound"
            app:layout_constraintEnd_toEndOf="@+id/tvTitle"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/tvTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            tools:text="Description" />

        <TextView
            android:id="@+id/tvSubDesc"
            style="@style/label"
            android:layout_width="0dp"
            android:textAlignment="viewStart"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="@{dataManager.subDescMaxLines}"
            android:visibility="@{dataManager.subDesc.length()>0?View.VISIBLE:View.GONE }"
            android:text="@{dataManager.subDesc}"
            android:textColor="@color/grey"
            app:layout_constraintEnd_toEndOf="@+id/tvTitle"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/tvTitle"
            app:layout_constraintTop_toBottomOf="@id/barrierDescSubDescBarrier"
            tools:text="Sub Description" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrierStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="start"
            app:constraint_referenced_ids="ivDelete, ivEdit" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrierDescSubDescBarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="tvTitle, tvDesc, ivAudioImage" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/descDividerBarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="tvDesc, tvSubDesc, ivAudioImage, ivIcon, ivDelete, ivEdit" />

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="@dimen/dp16"
            android:layout_height="@dimen/dp20"
            android:imageRes="@{dataManager.itemEndIcon == null ? R.drawable.ic_delete : dataManager.itemEndIcon}"
            app:layout_constraintBottom_toBottomOf="@+id/tvDesc"
            app:layout_constraintEnd_toStartOf="@+id/ivEdit"
            app:layout_constraintStart_toEndOf="@+id/barrierStart"
            app:layout_constraintTop_toTopOf="@+id/tvTitle"
            tools:src="@drawable/ic_delete" />

        <ImageView
            android:id="@+id/ivEdit"
            android:layout_width="@dimen/dp16"
            android:layout_height="@dimen/dp20"
            android:layout_marginStart="@dimen/dp20"
            android:src="@drawable/ic_edit"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/tvDesc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivDelete"
            app:layout_constraintTop_toTopOf="@+id/tvTitle"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/ivAudioImage"
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp24"
            android:layout_marginTop="@dimen/dp8"
            android:visibility="gone"
            android:layout_marginStart="@dimen/dp22"
            android:layout_marginBottom="@dimen/dp8"
            android:imageRes="@{dataManager.itemCenterIcon == null ? R.drawable.ic_voice_graphic : dataManager.itemCenterIcon}"
            app:layout_constraintBottom_toTopOf="@+id/vDivider"
            app:layout_constraintStart_toEndOf="@+id/barrier"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:src="@drawable/ic_voice_group" />

        <View
            android:id="@+id/vDivider"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginStart="@dimen/dp24"
            android:layout_marginTop="@dimen/dp10"
            android:background="@drawable/separator_horizontal"
            app:layout_constraintStart_toEndOf="@+id/barrier"
            app:layout_constraintTop_toBottomOf="@+id/descDividerBarrier" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
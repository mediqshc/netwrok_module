<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="lang"
            type="com.homemedics.app.firebase.RemoteConfigLanguage" />
    </data>

    <LinearLayout
        android:id="@+id/llContainer"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="locale"
        android:textDirection="locale"
        android:orientation="vertical">

        <com.homemedics.app.ui.custom.CustomActionbar
            android:id="@+id/actionbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:action2Res="@drawable/ic_close"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.homemedics.app.ui.custom.CustomDefaultEditText
            android:id="@+id/etStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp16"
            android:layout_marginHorizontal="@dimen/dp16"
            android:clickable="true"
            android:inputType="none"
            app:click="true"
            app:drawable="@drawable/ic_calendar"
            app:drawableStart="@drawable/ic_calendar"
            app:endIconMode="custom"
            app:textColorCheck="false" />

        <com.homemedics.app.ui.custom.CustomDefaultEditText
            android:id="@+id/etEndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp16"
            android:layout_marginHorizontal="@dimen/dp16"
            android:clickable="true"
            android:inputType="none"
            app:click="true"
            app:drawable="@drawable/ic_calendar"
            app:drawableStart="@drawable/ic_calendar"
            app:endIconMode="custom"
            app:textColorCheck="false" />

        <com.homemedics.app.ui.custom.CustomDefaultDropDown
            android:id="@+id/cdReferredBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:drawableStart="@drawable/ic_referred_by"
            android:layout_marginTop="@dimen/dp16"
            android:layout_marginHorizontal="@dimen/dp16"
            app:layout_constraintEnd_toEndOf="@+id/serviceTypeView"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/serviceTypeView"
            app:layout_constraintTop_toBottomOf="@+id/cdCountry" />

        <com.homemedics.app.ui.custom.CustomDefaultDropDown
            android:id="@+id/cdMedicineType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp16"
            android:layout_marginTop="@dimen/dp16"
            app:drawableStart="@drawable/ic_tests"
            app:layout_constraintEnd_toEndOf="@+id/serviceTypeView"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/serviceTypeView"
            app:layout_constraintTop_toBottomOf="@+id/cdSpeciality" />

        <com.homemedics.app.ui.custom.CustomDefaultDropDown
            android:id="@+id/cdTests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:drawableStart="@drawable/ic_tests"
            android:layout_marginTop="@dimen/dp16"
            android:layout_marginHorizontal="@dimen/dp16"
            app:layout_constraintEnd_toEndOf="@+id/serviceTypeView"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/serviceTypeView"
            app:layout_constraintTop_toBottomOf="@+id/cdSpeciality" />

        <CheckBox
            android:id="@+id/cbSharedRecords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="@dimen/dp16"
            android:fontFamily="@font/poppins_regular"
            android:text="@{lang.emrScreens.sharedRecord}"
            android:textSize="16sp"
            android:buttonTint="@color/black"
            android:translationX="-5dp"
            android:paddingStart="@dimen/dp8"
            app:layout_constraintStart_toStartOf="@+id/tvTitle"
            app:layout_constraintTop_toBottomOf="@+id/cdHospital" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp0"
            android:layout_weight="1" />
        
        <include
            android:id="@+id/layoutButtons"
            layout="@layout/layout_filter_buttons" />

    </LinearLayout>
</layout>
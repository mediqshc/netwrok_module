<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:background="@color/black90">

        <ImageView
            android:id="@+id/ivReject"
            android:layout_width="@dimen/dp90"
            android:layout_height="@dimen/dp90"
            android:src="@drawable/ic_cross_white_rounded"
            app:layout_constraintEnd_toStartOf="@+id/space"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Space
            android:id="@+id/space"
            android:layout_width="@dimen/dp90"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/ivReject"
            app:layout_constraintEnd_toStartOf="@+id/ivAccept"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/ivReject"
            app:layout_constraintTop_toTopOf="@+id/ivReject" />

        <ImageView
            android:id="@+id/ivAccept"
            android:layout_width="@dimen/dp90"
            android:layout_height="@dimen/dp90"
            android:src="@drawable/ic_tick_white_orange_rounded"
            app:layout_constraintBottom_toBottomOf="@+id/ivReject"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/space"
            app:layout_constraintTop_toTopOf="@+id/ivReject" />

        <TextView
            android:id="@+id/tvDecline"
            style="@style/heading_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/decline"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/dp16"
            app:layout_constraintEnd_toEndOf="@+id/ivReject"
            app:layout_constraintStart_toStartOf="@+id/ivReject"
            app:layout_constraintTop_toBottomOf="@+id/ivReject" />

        <TextView
            android:id="@+id/tvAccept"
            style="@style/heading_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accept"
            android:textColor="@color/white"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvDecline"
            app:layout_constraintEnd_toEndOf="@+id/ivAccept"
            app:layout_constraintStart_toEndOf="@+id/space" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
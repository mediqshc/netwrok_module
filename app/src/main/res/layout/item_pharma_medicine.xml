<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="locale"
        android:textDirection="locale">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivIcon"
            android:layout_width="@dimen/dp76"
            android:layout_height="@dimen/dp76"
            android:scaleType="centerInside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:id="@+id/llTop"
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/dp16"
            android:layout_marginEnd="@dimen/dp6"
            app:layout_constraintEnd_toStartOf="@+id/tvPrice"
            app:layout_constraintStart_toEndOf="@+id/ivIcon"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivWarning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_warning_info"
                android:layout_marginEnd="@dimen/dp6"
                android:visibility="gone"
                tools:visibility="visible"
                app:layout_constraintStart_toEndOf="@+id/ivIcon"
                app:layout_constraintEnd_toStartOf="@+id/tvTitle"
                app:layout_constraintTop_toTopOf="@+id/ivIcon"/>

            <TextView
                android:id="@+id/tvTitle"
                style="@style/label_m"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Panadol Tablet | Strip" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvDesc"
            style="@style/label_sm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="@+id/llTop"
            app:layout_constraintStart_toStartOf="@+id/llTop"
            app:layout_constraintTop_toBottomOf="@+id/llTop"
            tools:text="10 tablets | Pain killer" />

        <TextView
            android:id="@+id/tvTotalAmount"
            style="@style/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp16"
            tools:text="Total  Rs. 29.7"
            android:textColor="@color/orange"
            app:layout_constraintStart_toStartOf="@+id/llTop"
            app:layout_constraintTop_toBottomOf="@+id/tvDesc" />

        <TextView
            android:id="@+id/tvPrice"
            style="@style/label_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary"
            app:layout_constraintTop_toTopOf="@+id/llTop"
            app:layout_constraintBottom_toBottomOf="@+id/llTop"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="PKR 14.85" />

        <TextView
            android:id="@+id/tvDiscount"
            style="@style/label_sm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp2"
            android:textColor="@color/primary20"
            app:layout_constraintEnd_toEndOf="@+id/tvPrice"
            app:layout_constraintTop_toBottomOf="@+id/tvPrice"
            tools:text="Rs. 20.56" />

        <include
            android:id="@+id/iCartButtons"
            layout="@layout/layout_cart_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp12"
            app:layout_constraintEnd_toEndOf="@+id/tvPrice"
            app:layout_constraintTop_toBottomOf="@+id/tvDiscount" />
        
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="ivIcon, tvTotalAmount" />

        <View
            android:layout_width="@dimen/dp0"
            android:layout_height="@dimen/dp1"
            android:background="@color/divider"
            app:layout_constraintTop_toBottomOf="@id/barrier"
            android:layout_marginVertical="@dimen/dp16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
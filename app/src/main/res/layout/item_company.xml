<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <data>
        <variable
            name="multipleViewItem"
            type="com.fatron.network_module.models.generic.MultipleViewItem" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layoutDirection="locale"
        android:textDirection="locale"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clCompany"
            android:paddingTop="@dimen/dp16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivIcon"
                android:layout_width="@dimen/dp40"
                android:layout_height="@dimen/dp40"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:imagePath="@{multipleViewItem.imageUrl}" />

            <TextView
                android:id="@+id/tvTitle"
                style="@style/label_m"
                android:layout_width="0dp"
                android:textAlignment="viewStart"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp24"
                android:layout_marginEnd="@dimen/dp24"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@={multipleViewItem.title}"
                app:layout_constraintBottom_toBottomOf="@+id/ivIcon"
                app:layout_constraintEnd_toStartOf="@+id/rbCompany"
                app:layout_constraintStart_toEndOf="@+id/ivIcon"
                app:layout_constraintTop_toTopOf="@+id/ivIcon"
                tools:text="Title" />

            <RadioButton
                android:id="@+id/rbCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:gravity="center_vertical|end"
                android:button="@null"
                android:checked="@={multipleViewItem.selected}"
                android:drawableEnd="?android:attr/listChoiceIndicatorSingle"
                app:layout_constraintBottom_toBottomOf="@+id/ivIcon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ivIcon" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp16"
                android:background="@drawable/separator_horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvTitle"
                app:layout_constraintTop_toBottomOf="@+id/ivIcon" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>
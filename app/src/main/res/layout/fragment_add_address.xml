<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="lang"
            type="com.homemedics.app.firebase.RemoteConfigLanguage" />

        <variable
            name="addressModel"
            type="com.homemedics.app.model.AddressModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="locale"
        android:textDirection="locale"
        android:fitsSystemWindows="true">

        <com.homemedics.app.ui.custom.CustomActionbar
            android:id="@+id/customActionbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:action2Res="@drawable/ic_cross_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/addressView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/customActionbar"
            app:mapType="normal" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_location_pin"
            app:layout_constraintBottom_toBottomOf="@+id/map"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/customActionbar" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/addressView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layoutDirection="locale"
            android:textDirection="locale"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/locPin"
                android:layout_marginStart="@dimen/dp16"
                android:layout_width="@dimen/dp16"
                android:layout_height="@dimen/dp20"
                android:contentDescription="@string/location"
                app:layout_constraintBottom_toBottomOf="@+id/tvRegion"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvAddress"
                app:srcCompat="@drawable/ic_location_pin" />

            <TextView
                android:id="@+id/tvAddress"
                style="@style/label"
                android:layout_marginTop="@dimen/dp16"
                android:textAlignment="viewStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp16"
                android:layout_marginEnd="@dimen/dp16"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{addressModel.address}"
                app:layout_constraintEnd_toStartOf="@+id/edit"
                app:layout_constraintStart_toEndOf="@+id/locPin"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvRegion"
                style="@style/sub_label"
                android:layout_width="0dp"
                android:textAlignment="viewStart"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:text="@{addressModel.region}"
                app:layout_constraintEnd_toEndOf="@+id/tvAddress"
                app:layout_constraintStart_toStartOf="@+id/tvAddress"
                app:layout_constraintTop_toBottomOf="@+id/tvAddress" />

            <ImageView
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp16"
                app:layout_constraintBottom_toBottomOf="@+id/tvRegion"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvAddress"
                app:srcCompat="@drawable/ic_edit" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/bConfirmLoc"
                style="@style/button_long"
                android:layout_width="0dp"
                android:layout_marginTop="@dimen/dp24"
                android:text="@{lang.locationString.confirmLocation}"
                android:enabled="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvRegion" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
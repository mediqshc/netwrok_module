<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="lang"
            type="com.homemedics.app.firebase.RemoteConfigLanguage" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.homemedics.app.ui.custom.CustomActionbar
            android:id="@+id/actionbar"
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"
            app:action1Res="@drawable/ic_back_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/bConfirm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/actionbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp16">

                <TextView
                    android:id="@+id/tvHeading"
                    style="@style/heading_m"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/actionbar"
                    android:text="@{lang.claimScreen.headReviewExclusions}"
                    tools:text="Please review the exclusions mentioned below." />

                <TextView
                    android:id="@+id/tvContent"
                    style="@style/label_m"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp16"
                    android:textColor="@color/grey"
                    tools:text="Please review the exclusions mentioned below." />

                <TextView
                    android:id="@+id/tvProductHeading"
                    style="@style/heading_m"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp16"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/actionbar"
                    tools:text="Pharmacy claim exclusions" />

                <TextView
                    android:id="@+id/tvExclusion"
                    style="@style/label_m"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp16"
                    android:textColor="@color/grey"
                    android:visibility="gone"
                    tools:visibility="visible"
                    tools:text="Please review the exclusions mentioned below." />

                <TextView
                    android:id="@+id/tvCategoryHeading"
                    style="@style/heading_m"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp8"
                    app:layout_constraintTop_toBottomOf="@+id/actionbar"
                    android:text="@{lang.linkedAccountScreen.categories}"
                    tools:text="Categories" />

                <TextView
                    android:id="@+id/tvCategories"
                    style="@style/label_m"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp8"
                    android:textColor="@color/grey"
                    tools:text="Please review the exclusions mentioned below." />

                <TextView
                    android:id="@+id/tvExcludedItemsHeading"
                    style="@style/heading_m"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp8"
                    app:layout_constraintTop_toBottomOf="@+id/actionbar"
                    android:text="@{lang.claimScreen.excludedItems}"
                    tools:text="Excluded Items" />

                <TextView
                    android:id="@+id/tvExcludedItems"
                    style="@style/label_m"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp8"
                    android:textColor="@color/grey"
                    tools:text="Please review the exclusions mentioned below." />

            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/bConfirm"
            style="@style/button_long"
            android:layout_width="0dp"
            android:text="@{lang.globalString.confirm}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
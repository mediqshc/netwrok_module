<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="lang"
            type="com.homemedics.app.firebase.RemoteConfigLanguage" />
    </data>

    <LinearLayout
        android:id="@+id/llContainer"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="locale"
        android:textDirection="locale"
        android:orientation="vertical">

        <com.homemedics.app.ui.custom.CustomActionbar
            android:id="@+id/actionbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:action2Res="@drawable/ic_close"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.homemedics.app.ui.custom.CustomDefaultDropDown
            android:id="@+id/cdHospitalServices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp16"
            android:layout_marginTop="@dimen/dp16"
            app:drawableStart="@drawable/ic_company"
            app:layout_constraintEnd_toEndOf="@+id/serviceTypeView"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/serviceTypeView"
            app:layout_constraintTop_toBottomOf="@+id/cdSpeciality" />

        <com.homemedics.app.ui.custom.CustomDefaultDropDown
            android:id="@+id/cdPackageAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:drawableStart="@drawable/ic_magic_stars"
            android:layout_marginTop="@dimen/dp16"
            android:layout_marginHorizontal="@dimen/dp16"
            app:layout_constraintEnd_toEndOf="@+id/serviceTypeView"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/serviceTypeView"
            app:layout_constraintTop_toBottomOf="@+id/cdSpeciality" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <include
            android:id="@+id/layoutButtons"
            layout="@layout/layout_filter_buttons" />

    </LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_primary_corner_bottomsheet">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <com.homemedics.app.ui.custom.CustomActionbar
                android:id="@+id/actionbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:titleText="Appointment # AC-8785"
                app:action1Res="@drawable/ic_expand"
                app:desc="Confirmed"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0"
                android:fillViewport="true"
                app:layout_constraintTop_toBottomOf="@+id/actionbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <include
                        android:id="@+id/iDoctorHeader"
                        layout="@layout/item_doctor"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/tvQualification"
                        style="@style/label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="MBBS, FCPS (Medicine), FCPS (Cardiology)"
                        android:padding="@dimen/dp16"
                        android:maxLines="3"
                        android:ellipsize="end"
                        android:drawablePadding="@dimen/dp16"
                        android:drawableEnd="@drawable/ic_arrow_fw_angular_primary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iDoctorHeader"/>

                    <View
                        android:id="@+id/vShadow2"
                        android:layout_width="@dimen/dp0"
                        android:layout_height="@dimen/dp10"
                        android:layout_marginTop="@dimen/dp12"
                        android:background="@color/divider"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvQualification" />

                    <LinearLayout
                        android:id="@+id/llFees"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="@dimen/dp16"
                        android:background="@drawable/rounded_divider"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/vShadow2">

                        <TextView
                            android:id="@+id/tvServiceDesc"
                            style="@style/label"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/dp16"
                            android:text="@string/m_connect_with_video_consultation" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/divider" />

                        <TextView
                            android:id="@+id/tvPrice"
                            style="@style/label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Rs. 2,000"
                            android:textColor="@color/primary"
                            android:layout_gravity="center_vertical"
                            android:padding="@dimen/dp16"/>

                    </LinearLayout>

                    <View
                        android:id="@+id/vShadow4"
                        android:layout_width="@dimen/dp0"
                        android:layout_height="@dimen/dp10"
                        android:layout_marginTop="@dimen/dp12"
                        android:background="@color/divider"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/llFees" />

                    <TextView
                        android:id="@+id/tvSpecialInstruction"
                        style="@style/heading_m"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp16"
                        android:text="@string/special_instructions"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/vShadow4" />

                    <TextView
                        android:id="@+id/tvSpecialInstructionDesc"
                        style="@style/label_m"
                        android:layout_width="@dimen/dp0"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp16"
                        android:layout_marginTop="@dimen/dp10"
                        android:textColor="@color/grey"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvSpecialInstruction"
                        tools:text="@string/lorem_ipsum" />

                    <TextView
                        android:id="@+id/tvBookBy"
                        style="@style/label_m"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp16"
                        android:layout_marginTop="@dimen/dp10"
                        tools:text="Booked by: M Ahmed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvSpecialInstructionDesc" />

                    <View
                        android:id="@+id/vShadow3"
                        android:layout_width="@dimen/dp0"
                        android:layout_height="@dimen/dp10"
                        android:layout_marginTop="@dimen/dp16"
                        android:background="@color/divider"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvBookBy" />


                    <TextView
                        android:id="@+id/tvOrderDetails"
                        style="@style/heading_m"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp16"
                        android:text="@string/order_details"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/vShadow3" />

                    <TextView
                        android:id="@+id/tvServiceAmount"
                        style="@style/label_m"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp10"
                        android:layout_marginBottom="@dimen/dp18"
                        android:text="@string/video_consultation"
                        android:textColor="@color/grey"
                        app:layout_constraintStart_toStartOf="@+id/tvOrderDetails"
                        app:layout_constraintTop_toBottomOf="@+id/tvOrderDetails"/>

                    <TextView
                        android:id="@+id/tvAmount"
                        style="@style/label_m"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp16"
                        tools:text="4,500.00"
                        android:textColor="@color/primary"
                        app:layout_constraintBottom_toBottomOf="@+id/tvServiceAmount"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tvServiceAmount" />

                    <LinearLayout
                        android:id="@+id/llTotalStrip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/off_pink"
                        android:layout_marginTop="@dimen/dp10"
                        android:padding="@dimen/dp16"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvAmount"
                        tools:visibility="visible">

                        <TextView
                            style="@style/label_m"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/total"
                            android:textColor="@color/primary" />

                        <TextView
                            android:id="@+id/tvTotalAmount"
                            style="@style/label_m"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pkr_1_000_00"
                            android:textColor="@color/primary"
                            tools:text="PKR 3,825.00" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llAmountStrip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/off_purple"
                        android:layout_marginTop="@dimen/dp10"
                        android:padding="@dimen/dp16"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/llTotalStrip"
                        tools:visibility="visible">

                        <TextView
                            style="@style/label_m"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/payable_amount"
                            android:textColor="@color/primary" />

                        <TextView
                            android:id="@+id/tvPayableAmount"
                            style="@style/label_m"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pkr_1_000_00"
                            android:textColor="@color/primary"
                            tools:text="PKR 3,825.00" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.core.widget.NestedScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>
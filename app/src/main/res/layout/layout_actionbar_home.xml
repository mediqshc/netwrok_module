<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp64"
        android:layoutDirection="locale"
        android:textDirection="locale"
        android:background="@color/primary"
        android:paddingStart="@dimen/dp16">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp4"
            android:paddingEnd="@dimen/dp20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_back_white" />

        <TextView
            android:id="@+id/tvTitle"
            style="@style/actionbar_heading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:layout_marginEnd="8dp"
            android:textSize="18sp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvDesc"
            app:layout_constraintStart_toEndOf="@+id/ivBack"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="TextView" />

        <TextView
            android:id="@+id/tvDesc"
            style="@style/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp8"
            android:textColor="@color/white"
            android:textAlignment="textEnd"
            app:layout_constraintBottom_toBottomOf="@+id/tvTitle"
            app:layout_constraintEnd_toStartOf="@+id/ivAction2"
            app:layout_constraintTop_toTopOf="@+id/tvTitle"
            tools:text="TextView" />

        <ImageView
            android:id="@+id/ivAction3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp2"
            android:visibility="gone"
            android:layout_marginEnd="@dimen/dp8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tvDesc"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_close"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/ivAction2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp2"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_marginEnd="@dimen/dp16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_close" />

        <TextView
            android:id="@+id/tvDot"
            android:layout_width="@dimen/dp18"
            android:layout_height="@dimen/dp18"
            android:background="@drawable/circle_orange"
            android:visibility="gone"
            android:gravity="center"
            android:textSize="11sp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/ivAction2"
            app:layout_constraintEnd_toEndOf="@+id/ivAction2"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toEndOf="@+id/ivAction2"
            app:layout_constraintTop_toTopOf="@+id/ivAction2"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
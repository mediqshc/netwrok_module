<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clParent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_call_grey_lg">

            <com.twilio.video.VideoView
                android:id="@+id/remoteVideoView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginHorizontal="@dimen/dp16"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <com.skyfishjy.library.RippleBackground
                    android:id="@+id/ripple"
                    android:layout_width="@dimen/dp100"
                    android:layout_height="@dimen/dp100"
                    app:rb_color="@color/white"
                    app:rb_radius="24dp"
                    app:rb_rippleAmount="4"
                    app:rb_duration="3000"
                    app:rb_scale="2"  >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivThumbnail"
                        android:layout_width="@dimen/participant_profile_thumbnail"
                        android:layout_height="@dimen/participant_profile_thumbnail"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_male" />
                </com.skyfishjy.library.RippleBackground>

                <TextView
                    android:id="@+id/tvName"
                    style="@style/heading_lg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp16"
                    android:layout_marginTop="@dimen/dp24"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    tools:text="Muhammad Akram"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tvCallStatus"
                    style="@style/label_m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:gravity="center"
                    android:text="@string/ringing"
                    android:textColor="@color/orange" />

                <TextView
                    android:id="@+id/tvCallStatusMessage"
                    style="@style/label_m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:gravity="center"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:text="@string/m_call_status"
                    android:textColor="@color/white" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bCallAgain"
                    style="@style/button_primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp20"
                    android:backgroundTint="@color/orange"
                    android:text="@string/call_again"
                    android:visibility="gone"
                    app:cornerRadius="@dimen/dp50"
                    app:icon="@drawable/ic_add_call_black"
                    app:iconGravity="textStart"
                    app:iconPadding="@dimen/dp14"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/ivThumbnail"
                    app:layout_constraintStart_toStartOf="@+id/ivThumbnail"
                    app:layout_constraintTop_toBottomOf="@+id/tvCallStatusMessage"
                    tools:visibility="visible" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvNameSm"
                style="@style/label_m"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp16"
                android:layout_marginBottom="@dimen/dp20"
                android:elevation="@dimen/dp100"
                android:gravity="center"
                android:textColor="@color/white"
                android:translationZ="@dimen/dp100"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="Muhammad Akram"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/ivAudioStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp16"
                android:layout_marginStart="@dimen/dp16"
                android:visibility="gone"
                android:elevation="@dimen/dp100"
                android:translationZ="@dimen/dp100"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_mic_off_rounded_white"
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>
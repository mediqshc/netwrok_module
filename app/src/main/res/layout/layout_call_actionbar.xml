<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/dp20"
        tools:background="@color/black90"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/label_m"
            android:id="@+id/tvAppointmentNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            tools:text="Appointment # AC-8785"/>

        <ImageView
            android:id="@+id/ivSwitchCamera"
            android:layout_width="@dimen/dp18"
            android:layout_height="@dimen/dp18"
            android:layout_marginEnd="@dimen/dp24"
            android:visibility="gone"
            tools:visibility="visible"
            android:src="@drawable/ic_switch_camera_white" />

        <ImageView
            android:id="@+id/ivVolume"
            android:layout_width="@dimen/dp18"
            android:layout_height="@dimen/dp18"
            android:src="@drawable/ic_volume_on_white" />

    </LinearLayout>
</layout>
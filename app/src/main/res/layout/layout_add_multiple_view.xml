<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dp16"
        android:layoutDirection="locale"
        android:textDirection="locale">

        <View
            android:id="@+id/sTop"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="@dimen/dp16"
            android:background="@color/call_red"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvHeading"
            style="@style/heading_m"
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp10"
            app:layout_constraintBottom_toTopOf="@+id/tvCustDesc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/llSide"
            app:layout_constraintTop_toBottomOf="@id/sTop"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="@string/personal_details" />

        <LinearLayout
            android:id="@+id/llSide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical"
            android:paddingVertical="@dimen/dp12"
            app:layout_constraintBottom_toBottomOf="@+id/tvHeading"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvHeading">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tvAddNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_border_primary_disabled"
                android:drawablePadding="@dimen/dp8"
                android:paddingStart="@dimen/dp12"
                android:paddingTop="@dimen/dp8"
                android:paddingEnd="@dimen/dp12"
                android:paddingBottom="@dimen/dp8"
                android:text="@string/add_new"
                android:textColor="@drawable/selector_primary_disabled_color"
                app:drawableEndCompat="@drawable/ic_add_primary"
                app:drawableTint="@drawable/selector_primary_disabled_color" />

        </LinearLayout>

        <!--        <TextView-->
        <!--            android:id="@+id/tvAddNew"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:background="@drawable/selector_border_primary_disabled"-->
        <!--            android:drawablePadding="@dimen/dp8"-->
        <!--            android:paddingStart="@dimen/dp12"-->
        <!--            android:paddingTop="@dimen/dp8"-->
        <!--            android:paddingEnd="@dimen/dp12"-->
        <!--            android:paddingBottom="@dimen/dp8"-->
        <!--            android:text="@string/add_new"-->
        <!--            android:textColor="@drawable/selector_primary_disabled_color"-->
        <!--            app:drawableTint="@drawable/selector_primary_disabled_color"-->
        <!--            app:drawableEndCompat="@drawable/ic_add_primary"-->
        <!--            app:layout_constraintEnd_toEndOf="parent"-->
        <!--            app:layout_constraintTop_toTopOf="parent" />-->

        <!--        <androidx.appcompat.widget.SwitchCompat-->
        <!--            android:id="@+id/switchButton"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:visibility="gone"-->
        <!--            tools:visibility="visible"-->
        <!--            app:layout_constraintBottom_toBottomOf="@+id/tvHeading"-->
        <!--            app:layout_constraintEnd_toEndOf="parent"-->
        <!--            app:layout_constraintTop_toTopOf="@+id/tvHeading" />-->


        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="llSide, tvCustDesc, sBottom" />

        <TextView
            android:id="@+id/tvCustDesc"
            style="@style/sub_label"
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/dp6"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/spaceBeforeList"
            app:layout_constraintEnd_toStartOf="@+id/llSide"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/tvHeading"
            app:layout_constraintTop_toBottomOf="@+id/tvHeading"
            tools:visibility="visible" />

        <Space
            android:id="@+id/sBottom"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp16"
            app:layout_constraintTop_toBottomOf="@id/tvCustDesc"
            app:layout_constraintStart_toStartOf="parent"/>

        <Space
            android:id="@+id/spaceBeforeList"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp8"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/llSide"
            app:layout_constraintStart_toStartOf="@+id/tvHeading"
            app:layout_constraintTop_toBottomOf="@+id/barrier"
            tools:visibility="visible" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvItems"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="@+id/llSide"
            app:layout_constraintStart_toStartOf="@+id/tvHeading"
            app:layout_constraintTop_toBottomOf="@+id/spaceBeforeList"
            tools:itemCount="3"
            tools:listitem="@layout/item_add_multiple_list" />

        <Space
            android:id="@+id/spaceAfterList"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp16"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/rvItems"
            tools:visibility="visible" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivCnic"
            android:layout_width="@dimen/dp0"
            android:layout_height="@dimen/cnic"
            android:layout_marginVertical="@dimen/dp16"
            android:visibility="gone"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="@+id/llSide"
            app:layout_constraintStart_toStartOf="@+id/tvHeading"
            app:layout_constraintTop_toBottomOf="@+id/llSide"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
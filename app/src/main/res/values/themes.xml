<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SnoonuStoreManager" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>
        <item name="android:includeFontPadding">false</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Theme.FullScreen" parent="Theme.SnoonuStoreManager">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="text_input_layout_style">
        <item name="hintTextColor">@color/black</item>
        <item name="android:theme">@style/TextInputLayoutAppearance</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/activated</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="hintTextColor">@color/black</item>
        <item name="colorControlHighlight">@color/activated</item>
        <item name="boxStrokeColor">@color/activated</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="button_primary" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dp46</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:backgroundTint">@drawable/selector_primary_disabled_color</item>
        <item name="iconTint">@color/white</item>
        <item name="cornerRadius">@dimen/dp6</item>
        <item name="android:insetTop">@dimen/dp0</item>
        <item name="android:insetBottom">@dimen/dp0</item>
        <item name="android:gravity">center</item>
        <item name="iconGravity">textEnd</item>
        <item name="iconPadding">@dimen/dp14</item>
        <item name="android:paddingStart">@dimen/dp24</item>
        <item name="android:paddingEnd">@dimen/dp24</item>
        <item name="android:paddingTop">@dimen/dp12</item>
        <item name="android:paddingBottom">@dimen/dp12</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="button_long" parent="button_primary">
        <item name="cornerRadius">@dimen/dp0</item>
    </style>

    <style name="button_long_orange" parent="button_long">
        <item name="android:backgroundTint">@drawable/selector_orange</item>
    </style>

    <style name="button_pink" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@drawable/selector_baby_pink</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dp46</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">@dimen/dp6</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="button_long_white" parent="button_long">
        <item name="android:backgroundTint">@drawable/rounded_white_primary_stroke</item>
    </style>

    <style name="label_parent">
        <item name="android:textColor">@color/black90</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>
    
    <style name="label_link" parent="label_parent">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="label_m" parent="label_parent">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="label" parent="label_parent">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="label_sm" parent="label_parent">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="nav_drawer" parent="label_m">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetDialogStyle</item>
    </style>
    <style name="BottomSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetBackground</item>
    </style>

    <style name="bottomSheetBackground" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/white</item>
    </style>

    <style name="heading_parent" parent="label_parent">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="heading_ovo" parent="heading_parent">
        <item name="android:fontFamily">@font/ovo_regular</item>
    </style>

    <style name="heading_xlg" parent="heading_parent">
        <item name="android:textColor">@color/black90</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="heading_lg" parent="heading_parent">
        <item name="android:textColor">@color/black90</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="heading_m" parent="heading_parent">
        <item name="android:textColor">@color/black90</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="actionbar_heading">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">21sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>
    <style name="sub_label" parent="label_parent">
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="disable_label" parent="label_parent">
        <item name="android:textColor">@color/primary20</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="tabs_primary">
        <item name="android:background">@color/primary</item>
        <item name="tabTextAppearance">@android:style/TextAppearance.Widget.TabWidget</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/white60</item>
        <item name="tabIndicatorColor">@drawable/selector_white_transparent_color</item>
    </style>

    <style name="tabs_material">
        <item name="tabSelectedTextColor">@color/primary</item>
        <item name="tabTextColor">@color/primary</item>
        <item name="tabIndicatorColor">@color/primary</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetBackground</item>
    </style>

    <style name="edittext_description">
        <item name="android:textColor">@color/black90</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:lines">8</item>
        <item name="android:minLines">6</item>
        <item name="maxLines">10</item>
        <item name="android:gravity">top|start</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="edittext_search">
        <item name="android:layout_height">@dimen/dp52</item>
        <item name="android:textColor">@color/black90</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:fontWeight" tools:ignore="NewApi">400</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">@dimen/dp16</item>
        <item name="android:lines">1</item>
        <item name="android:maxLength">30</item>
        <item name="android:gravity">top|start</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="CustomDatePickerDialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
        <item name="android:colorAccent">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textColorPrimary">@color/black90</item>
    </style>


    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
    </style>

    <style name="button_dialog">
        <item name="android:maxWidth">@dimen/dp120</item>
        <item name="android:minWidth">@dimen/dp120</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:paddingTop">@dimen/dp16</item>
        <item name="android:paddingBottom">@dimen/dp16</item>
        <item name="android:paddingStart">@dimen/dp24</item>
        <item name="android:paddingEnd">@dimen/dp24</item>
    </style>

    <style name="button_multiple" parent="button_dialog">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">@dimen/dp12</item>
        <item name="android:paddingEnd">@dimen/dp12</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="bordered_textview" parent="label_parent">
        <item name="android:textColor">@color/black90</item>
        <item name="android:paddingTop">@dimen/dp6</item>
        <item name="android:paddingStart">@dimen/dp12</item>
        <item name="android:paddingEnd">@dimen/dp12</item>
        <item name="android:paddingBottom">@dimen/dp6</item>
        <item name="android:background">@drawable/selector_rounded_divider_rounded_primary</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:dialogMessage">@font/poppins_regular</item>
        <item name="android:titleTextColor" tools:targetApi="m">@android:color/black</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:layoutDirection">locale</item>
        <item name="android:textDirection">locale</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary</item>
    </style>


    <style name="base_bottom_sheet" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/bottom_sheet_modal</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="bottom_sheet_modal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_top_white_lg</item>
        <item name="behavior_fitToContents">true</item>
        <item name="behavior_halfExpandedRatio">0.5</item>
        <item name="behavior_skipCollapsed">true</item>
        <item name="behavior_peekHeight">1000dp</item>
        <item name="behavior_hideable">true</item>
    </style>

    <style name="base_bottom_sheet_bluish" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/bottom_sheet_modal</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


    <style name="bottom_sheet_shape_appearance" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
    </style>


    <style name="checkbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

</resources>
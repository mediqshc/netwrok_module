<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:padding="@dimen/dp16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivNav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp4"
                android:src="@drawable/ic_menu_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp40"
                android:layout_weight="1"
                android:src="@drawable/ic_mediq_logo_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivNotifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp8"
                android:padding="@dimen/dp2"
                android:src="@drawable/ic_bell_white"
                app:layout_constraintBottom_toBottomOf="@+id/ivProfile"
                app:layout_constraintEnd_toStartOf="@+id/ivProfile"
                app:layout_constraintTop_toTopOf="@+id/ivProfile" />

            <TextView
                android:id="@+id/tvFilterBadge"
                android:layout_width="@dimen/dp22"
                android:layout_height="@dimen/dp22"
                android:padding="@dimen/dp2"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="8sp"
                tools:text="00"
                android:background="@drawable/circle_pink"
                android:visibility="gone"
                tools:visibility="visible"
                app:layout_constraintTop_toTopOf="@+id/ivNotifications"
                app:layout_constraintBottom_toTopOf="@+id/ivNotifications"
                app:layout_constraintEnd_toStartOf="@+id/ivNotifications"
                app:layout_constraintStart_toStartOf="@+id/ivNotifications"/>

            <ImageView
                android:id="@+id/ivProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp4"
                android:src="@drawable/ic_profile_placeholder_1"
                app:layout_constraintBottom_toBottomOf="@+id/ivNav"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ivNav" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/bottom_oval_primary"
            app:layout_constraintBottom_toBottomOf="@+id/guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".25" />

        <TextView
            android:id="@+id/tvGreetMsg"
            style="@style/label_m"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp16"
            android:text="@string/hello_user"
            android:textColor="@color/orange"
            android:textStyle="bold"
            android:maxLines="1"
            android:includeFontPadding="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <TextView
            android:id="@+id/tvGreetMsg1"
            style="@style/label_m"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp16"
            android:text="@string/hello_user"
            android:textColor="@color/white"
            android:maxLines="1"
            android:includeFontPadding="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/tvGreetMsg" />

        <LinearLayout
            android:id="@+id/llConnections"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp16"
            android:background="@drawable/rounded_white_lg"
            android:elevation="@dimen/dp8"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dp16"
            android:paddingVertical="@dimen/dp12"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            tools:visibility="visible">

            <TextView
                android:id="@+id/tvMyConnections"
                style="@style/heading_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp8"
                android:includeFontPadding="false"
                tools:text="@string/my_connections" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvLinkedAccounts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                tools:itemCount="1"
                tools:listitem="@layout/item_bordered_text_thumb_view" />

        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llConnections"
            app:layout_constraintVertical_bias="0.0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvOptions"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:background="@color/divider"
                    android:layout_marginHorizontal="@dimen/dp16"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:spanCount="2"
                    tools:itemCount="2"
                    tools:listitem="@layout/item_home_options" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/border_white_1dp"
                    app:layout_constraintStart_toStartOf="@id/rvOptions"
                    app:layout_constraintEnd_toEndOf="@id/rvOptions"
                    app:layout_constraintTop_toTopOf="@id/rvOptions"
                    app:layout_constraintBottom_toBottomOf="@id/rvOptions"/>

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPager"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp180"
                    android:layout_marginTop="@dimen/dp16"
                    android:layout_marginBottom="@dimen/dp100"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rvOptions"
                    app:layout_constraintVertical_bias="0.0" />

                <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                    android:id="@+id/dotsIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp16"
                    app:dotsColor="@color/white60"
                    app:dotsSize="@dimen/dp6"
                    app:dotsSpacing="@dimen/dp3"
                    app:dotsWidthFactor="4"
                    app:layout_constraintBottom_toBottomOf="@+id/viewPager"
                    app:layout_constraintEnd_toEndOf="@+id/viewPager"
                    app:layout_constraintStart_toStartOf="@+id/viewPager"
                    app:progressMode="false"
                    app:selectedDotColor="@color/primary" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp16"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/rounded_primary_lg"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dp16"
            android:elevation="@dimen/dp8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tvMyOrders"
                style="@style/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp16"
                android:gravity="center"
                android:textColor="@color/white"
                app:drawableStartCompat="@drawable/ic_receipt_white"
                tools:text="@string/my_order" />

            <View
                android:layout_width="@dimen/dp1"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/dp16"
                android:background="@color/orange" />

            <TextView
                android:id="@+id/tvEMR"
                style="@style/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp16"
                android:gravity="center"
                android:textColor="@color/white"
                app:drawableStartCompat="@drawable/ic_emr_round_white"
                tools:text="EMR" />

            <View
                android:layout_width="@dimen/dp1"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/dp16"
                android:background="@color/orange" />

            <TextView
                android:id="@+id/tvMyClaims"
                style="@style/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp16"
                android:gravity="center"
                android:textColor="@color/white"
                app:drawableStartCompat="@drawable/ic_claim_white"
                tools:text="@string/my_order" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>